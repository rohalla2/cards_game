<h3>Join an existing Game</h3>
<%= form_tag '/games/join', class: "form-inline", role: "form"  do %>
  <div class="form-group">  
    <%= label_tag :name, 'Game Name:', class: "sr-only" %>
    <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Enter game name" %>
  </div>
  <div class="form-group">
    <%= label_tag :code, 'Code:', class: "sr-only" %>
    <%= text_field_tag :code, params[:code], class: "form-control", placeholder: "Enter code provided by game owner" %>
  </div>
  
  <%= submit_tag "Join", class: "btn btn-default" %>
      
  </div>
  <% end %>