<p>
  <strong>Name:</strong>
  <%= @game.name %>
</p>

<p>
  <strong>Code:</strong>
  <%= @game.code %>
</p>

<ul>
	<% @game.players.each do |player| %>
		<li><%= player.name %> (<%= player.email %>)</li>
	<% end %>
</ul>

	<% if @game.closed %>
		<%= link_to "Start Game not functional", game_path(@game), class: "btn btn-success" %>
	<% end %>
	<br>
<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
